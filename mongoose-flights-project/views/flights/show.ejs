<link rel='stylesheet' href='/stylesheets/style.css' />
<% if (flight.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airline</th>
          <th>flightNo</th>
          <th>Departs</th>
        </tr>
      </thead>
      <tbody>
        <% flight.reviews.forEach(function(r) { %>
          <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>